<VBox styleClass="root" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoginController">
   <children>
   
       <Text styleClass="welcometext">خوش آمدید </Text>
   
       <HBox styleClass="hbox">
      <children>
              <TextField fx:id="uname" styleClass="inputfield" />
              <Label prefHeight="15.0" prefWidth="70.0" styleClass="labels">نام کاربری</Label>
      </children>
       </HBox>
   
       <HBox styleClass="hbox">
      <children>
              <PasswordField fx:id="pword" onAction="#GoToDeclaration" styleClass="inputfield" />
              <Label prefHeight="15.0" prefWidth="70.0" styleClass="labels">رمز عبور</Label>
      </children>
       </HBox>
      <Label fx:id="errorLBL" text="نام کاربری یا کلمه عبور اشتباه است" textFill="RED" visible="false" />
   
       <!--<Button text="Sign In"-->
